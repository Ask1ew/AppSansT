<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu principal"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#111543"
        android:layout_marginBottom="16dp"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/menu_item_accueil"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_baseline_home_24"
            android:layout_marginEnd="16dp"
            app:tint="#111543" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accueil"
            android:textSize="16sp"
            android:textColor="#111543"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_item_repas"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_baseline_restaurant_24"
            android:layout_marginEnd="16dp"
            app:tint="#111543" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/repas"
            android:textSize="16sp"
            android:textColor="#111543"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_item_entrainement"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_baseline_fitness_center_24"
            android:layout_marginEnd="16dp"
            app:tint="#111543" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/entra_nement"
            android:textSize="16sp"
            android:textColor="#111543"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_item_poids"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_baseline_restaurant_24"
            android:layout_marginEnd="16dp"
            app:tint="#111543" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/poids"
            android:textSize="16sp"
            android:textColor="#111543"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_item_objectifs"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_baseline_flag_24"
            android:layout_marginEnd="16dp"
            app:tint="#111543" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/objectifs"
            android:textSize="16sp"
            android:textColor="#111543"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_item_logout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_baseline_logout_24"
            android:layout_marginEnd="16dp"
            app:tint="#FF3B30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DÃ©connexion"
            android:textSize="16sp"
            android:textColor="#FF3B30"/>
    </LinearLayout>
</LinearLayout>