<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/conteneurFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.menuBarre"
    android:layout_margin="0dp"
    android:fitsSystemWindows="true" app:layout_scrollEffect="none">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#111543"
        android:layout_margin="0px"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="10px"
        android:outlineAmbientShadowColor="@color/black">

        <!-- Bouton à gauche, centré verticalement -->
        <Button
            android:id="@+id/buttonBurger"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/icon_menu_blanc"
            android:gravity="center"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="8dp"
            android:contentDescription="@android:string/untitled"/>

        <!-- Texte centré au milieu du FrameLayout -->
        <TextView
            android:id="@+id/textViewMenuBarre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="34sp"
            android:textColor="#FFFFFF"
        />

        <Button
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:id="@+id/buttonCompteMenuBarre"
            android:layout_gravity="clip_horizontal|right"
            android:layout_margin="8px"
            android:background="@drawable/icon_compte_blanc"
            android:contentDescription="@android:string/untitled"/>
    </FrameLayout>
</FrameLayout>
