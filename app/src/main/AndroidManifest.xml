<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.appsanst">

    <application
        android:label="@string/app_name"
        android:theme="@style/Theme.AppSansT">

        <!-- Login Activity (Activité principale au lancement) -->
        <activity
            android:name="connexion.login.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            tools:ignore="MissingClass">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>


        <!-- Home Activity -->
        <activity
            android:name="home.homeActivity"
            android:exported="true"
            android:label="@string/title_activity_home"/>

        <!-- Poids Activity -->
        <activity
            android:name=".PoidsActivity"
            android:exported="true"
            android:label="@string/title_activity_poids"/>

        <!-- Entraînement Activity -->
        <activity
            android:name=".EntrainementActivity"
            android:exported="true"
            android:label="@string/title_activity_entrainement"/>

        <!-- Repas Activity -->
        <activity
            android:name=".RepasActivity"
            android:exported="true"
            android:label="@string/title_activity_repas"/>

        <activity android:name=".AjoutRepasActivity"
                  android:exported="true"
                  android:label="@string/title_activity_repas"
                  android:windowSoftInputMode="stateHidden|adjustNothing"/>

        <activity android:name=".ObjectifsActivity"
                  android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
                  android:windowSoftInputMode="stateHidden|adjustResize"/>

        <activity
            android:name=".ProfilActivity"
            android:exported="false" />

    </application>
</manifest>
